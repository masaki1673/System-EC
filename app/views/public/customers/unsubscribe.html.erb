        <div class="btn-wrapper col-10 mx-auto">
          <div class="row">
            <%= link_to "退会しない", cancel_customer_registration_path, class: "btn btn-info btn-sm btn-block mb-3 is_active" %>
          </div>
          <div class="row">
            <%= link_to "退会する", customers_withdraw_path, method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-sm btn-danger btn-block withdrawal" %>
