<div class="container">
  <div class='row'>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2 class="px-3 mx-auto">配送先登録/一覧</h2>
      <%= form_with model: @address, url:addresses_path, local:true do |f| %>
      <h6>郵便番号</h6>
      <%= f.text_field :postal_code %>
      <h6>住所</h6>
       <%= f.text_field :address %>
      <h6>宛名</h6>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
       <table class="table table-hover table-inverse">
        <thead>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </thead>
        <tbody>
      　<% @addresses.each do |address| %>
      <tr>
       <td><%= address.postal_code %></td>
       <td><%= address.address %></td>
       <td><%= address.name %></td>
       <td><%= link_to "編集", edit_address_path(address), class: "btn btn-sm btn-success" %></td>
       <td><%= link_to "削除", address_path(address), method: :delete,"data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %></td>
      </tr>
        <% end %>
      </tbody>
   </div>
 </div>
</div>
 