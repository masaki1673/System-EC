<div class="container">
  <div class='row'>
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <h2 class="px-3 mx-auto">商品一覧</h2>
       <div class="row">
    　  <% @items.each do |item| %>
    　  <div class="col-md-3">
        <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, format: 'jpeg', width: "100%" %>
        <p>商品名</p>
        <p><%= item.name%></P>
        <p>税込価格 <%= item.price %>円</p>
        
        <% end %>
        </div>
    　   <% end %>
  </div>
</div>