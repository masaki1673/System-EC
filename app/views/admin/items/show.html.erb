<main>
  <div class="container">
    <div class='row justify-content-center'>
      <div class='col-4 col-sm-10 col-lg-8 col-xl-4'>
      <%= attachment_image_tag @item, :image, format: 'jpeg', size: "300x300" %>
      </div>
      <div class='col-4 col-sm-10 col-lg-8 col-xl-4'>
       <h1 class="px-3 mx-auto">商品詳細</h1>
       <p>商品名 <%= @item.name%></P>
       <p>商品説明 <%= @item.introduction %></p>
       <p>ジャンル <%= @item.genre.name %></p>
       <p>税込価格 <%= @item.price %></p>
       <p>
           販売ステータス 
           <% if @item.is_active? %>
           販売中
           <% else %>
           販売停止中
           <% end %>
       </p>
      <%= form_with model: @items, url:'/cart_items', local:true do |f| %>
      <%= link_to "編集する", edit_admin_item_path(@item.id),  class: "btn btn-success" %>
      <% end %>
     </div>
    </div>
  </div>
</main>