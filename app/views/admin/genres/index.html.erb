<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>ジャンル一覧・追加</h3>
      <%= form_with model: @genre, url:'/admin/genres', local:true do |f| %>
        <p></p>
        <h4>ジャンル名</h4>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>ジャンル</h2>
      <table class="table table-hover table-inverse">
        <thead>
         <tr>
          <th>ジャンル名</th>
          <th></th>
          <th colspan="3"></th>
    　    </tr>
        </thead>
        <tbody>
          <tr>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>