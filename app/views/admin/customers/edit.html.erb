<h1>会員情報編集</h1>
<%= form_with model:@customer, url:"/customers/#{@customer.id}", local:true do |f| %>
  <% if @customer.errors.any? %>
  <%= @customer.errors.count %>error
  <% @customer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
        <th colspan="3"></th>
    </tr>
    <h6>会員id</h6>
    <%= @customer.id %>
    <h6>氏名</h6>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <h6>フリガナ</h6>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
    <h6>郵便番号</h6>
    <%= f.text_field :postal_code %>
    <h6>住所</h6>
    <%= f.text_field :address %>
    <h6>電話番号</h6>
    <%= f.text_field :telephone_number %>
    <h6>会員ステータス</h6>
    <%= form.radio_button :is_active, :valid, checked: true %>
    <%= form.label :is_active, "有効", {value: :valid, style: "display: inline-block;"} %>
    <%= form.radio_button :is_active, :withdrawal %>
    <%= form.label :is_active, "退会", {value: :withdrawal, style: "display: inline-block;"} %>
    <%= f.submit '変更を保存', class: "btn btn-success" %>
    <% end %>
　</tbody>
</table>